-------TASK 3b Distance Routing protocol 

#include <stdio.h>

// Each router (node) maintains a distance table
struct node {
    unsigned dist[20];  // Distance to each node
    unsigned from[20];  // Next-hop router (via)
} rt[10];

int main() {
    int dmat[20][20], n, i, j, k, count;

    // Step 1: Input the number of routers (nodes)
    printf("\nEnter the number of nodes : ");
    scanf("%d", &n);

    // Step 2: Input the cost (distance) matrix
    // Each cell represents cost from node i to node j
    printf("\nEnter the cost matrix :\n");
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++) {
            scanf("%d", &dmat[i][j]);
            rt[i].dist[j] = dmat[i][j];  // Initialize distance table
            rt[i].from[j] = j;           // Initially, next hop = destination itself
        }

    // Step 3: Distance from node to itself is always 0
    for (i = 0; i < n; i++)
        rt[i].dist[i] = 0;

    // Step 4: Apply Distance Vector Algorithm (Bellman-Ford approach)
    // Repeat updates until no change occurs in any router table
    do {
        count = 0;
        for (i = 0; i < n; i++)            // For every router i
            for (j = 0; j < n; j++)        // For every destination j
                for (k = 0; k < n; k++)    // For every possible intermediate router k
                    if (rt[i].dist[j] > dmat[i][k] + rt[k].dist[j]) {
                        // Update distance and next hop if shorter path is found
                        rt[i].dist[j] = dmat[i][k] + rt[k].dist[j];
                        rt[i].from[j] = k;
                        count++;           // Mark that an update happened
                    }
    } while (count != 0);  // Stop when no more updates occur (network converged)

    // Step 5: Print final routing tables for all routers
    for (i = 0; i < n; i++) {
        printf("\n\nState value for router %d is \n", i + 1);
        for (j = 0; j < n; j++)
            printf("\t\nNode %d via %d Distance %d\n\n", j + 1, rt[i].from[j] + 1, rt[i].dist[j]);
    }

    return 0;
}
