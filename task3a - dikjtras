// ————3A. Dijksetra————

// Online C compiler to run C program online
#include <stdio.h>
#include <limits.h>
#include <stdlib.h>
#define v 9

int min_idx(int dist[v], int sptset[v]){
    int min=INT_MAX, min_idx;
    for(int i=0;i<v;i++){
        if(sptset[i]==0 && dist[i]<min){
            min=dist[i];
            min_idx=i;
        }
    }
    return min_idx;
}

void printsoln(int dist[v]){
    for(int i=0;i<v;i++){
        printf("%d\t", dist[i]);
    }
}

void dijksetra(int graph[v][v], int src){
    int dist[v];
    int sptset[v];
    
    for(int i=0;i<v;i++){
        dist[i]=INT_MAX;
        sptset[i]=0;
    }
    dist[src]=0;
    
    for(int count=0;count<v-1;count++){
        int i=min_idx(dist, sptset);
        sptset[i]=1; 
        
        for(int j=0;j<v;j++){
            if(!sptset[j] && graph[i][j] && dist[i]!=INT_MAX && dist[i]+graph[i][j] < dist[j]){
                dist[j]=dist[i]+graph[i][j];
            }
        }
    }
    printsoln(dist);
}

int main() {
    // Write C code here
    int graph[v][v] = {
  {0, 4, 0, 0, 0, 0, 0, 8, 0},
  {4, 0, 8, 0, 0, 0, 0, 11, 0},
  {0, 8, 0, 7, 0, 4, 0, 0, 2},
  {0, 0, 7, 0, 9, 14, 0, 0, 0},
  {0, 0, 0, 9, 0, 10, 0, 0, 0},
  {0, 0, 4, 0, 10, 0, 2, 0, 0},
  {0, 0, 0, 14, 0, 2, 0, 1, 6},
  {8, 11, 0, 0, 0, 0, 1, 0, 7},
  {0, 0, 2, 0, 0, 0, 6, 7, 0}
};
    dijksetra(graph, 0);

    return 0;
}
